<PropertyList include="pup-common.xml">

  <sim>

    <aero>pup150</aero>
    <aircraft-version>0.1.0</aircraft-version>
    <author>Richard Senior</author>
    <description>Beagle Pup 150</description>
    <flight-model>jsb</flight-model>

    <model>
      <path>Models/pup150.xml</path>
    </model>

    <aircraft-data>
      <path>fdm/jsbsim/inertia/pointmass-weight-lbs[2]</path>
    </aircraft-data>

    <rating>
      <FDM type="int">2</FDM>
      <systems type="int">2</systems>
      <cockpit type="int">2</cockpit>
      <model type="int">2</model>
    </rating>

    <sound>
      <audible>true</audible>
      <cabin-volume type="double">1.0</cabin-volume>
      <path>Sounds/pup150-sound.xml</path>
    </sound>

    <startup>
      <splash-texture>pup150-splash.png</splash-texture>
    </startup>

  </sim>

  <limits>
    <mass-and-balance>
      <maximum-takeoff-mass-lbs type="double">1925</maximum-takeoff-mass-lbs>
    </mass-and-balance>
  </limits>

  <payload>
    <weight n="2">
      <name type="string">Rear Seat</name>
      <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[2]"/>
      <min-lb type="double">0</min-lb>
      <max-lb type="double">140</max-lb>
    </weight>
  </payload>

</PropertyList>

