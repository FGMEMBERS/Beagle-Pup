<PropertyList>

  <key n="1">
    <name>Ctrl-a</name>
    <desc>Toggle altitude hold</desc>
    <binding>
      <command>switch-momentary</command>
      <property>autopilot/sperry/alt-hold-button</property>
    </binding>
  </key>
  <key n="26">
    <name>Ctrl-z</name>
    <desc>Toggle autopilot on/off</desc>
    <binding>
      <command>switch-toggle</command>
      <property>autopilot/sperry/main-switch</property>
    </binding>
  </key>
  <key n="70">
    <name>F</name>
    <desc>Full Power</desc>
    <binding>
      <command>property-interpolate</command>
      <property>controls/engines/engine/throttle</property>
      <value>1.0</value>
      <time>2.0</time>
    </binding>
  </key>
  <key n="98">
    <name>b</name>
    <desc>Select Both Tanks</desc>
    <mod-alt>
      <binding>
        <command>tank-select-both</command>
      </binding>
    </mod-alt>
  </key>
  <key n="108">
    <name>l</name>
    <desc>Select Left Tank</desc>
    <mod-alt>
      <binding>
        <command>tank-select-left</command>
      </binding>
    </mod-alt>
  </key>
  <key n="114">
    <name>r</name>
    <desc>Select Right Tank</desc>
    <mod-alt>
      <binding>
        <command>tank-select-right</command>
      </binding>
    </mod-alt>
  </key>
  <key n="76">
    <name>L</name>
    <desc>After Landing Checklist</desc>
    <binding>
      <command>complete-checklists</command>
      <name>after-landing</name>
      <wait>0</wait>
    </binding>
  </key>
  <key n="82">
    <name>R</name>
    <desc>Before Takeoff Checklist</desc>
    <binding>
      <command>complete-checklists</command>
      <name>before-takeoff</name>
      <wait>0</wait>
    </binding>
  </key>

</PropertyList>
