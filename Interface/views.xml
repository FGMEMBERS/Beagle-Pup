<PropertyList>

  <view n="0">
    <name>Cockpit</name>
    <type>lookfrom</type>
    <internal type="bool">true</internal>
    <config>
      <x-offset-m type="double">-0.25</x-offset-m>
      <y-offset-m type="double">0.45</y-offset-m>
      <z-offset-m type="double">2.5</z-offset-m>
      <pitch-offset-deg>-12</pitch-offset-deg>
      <field-of-view type="double">60.0</field-of-view>
      <default-field-of-view-deg type="double">60.0</default-field-of-view-deg>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
    </config>
  </view>

  <view n="1">
    <config>
      <target-z-offset-m type="double">2.4</target-z-offset-m>
    </config>
  </view>

  <view n="2">
    <config>
      <target-z-offset-m type="double">2.4</target-z-offset-m>
    </config>
  </view>

  <view n="5">
    <config>
      <target-z-offset-m type="double">2.4</target-z-offset-m>
      <default-field-of-view-deg type="double">40.0</default-field-of-view-deg>
    </config>
  </view>

  <view n="6">
    <config>
      <target-z-offset-m type="double">2.4</target-z-offset-m>
    </config>
  </view>

  <view n="7">
    <config>
      <target-z-offset-m type="double">2.4</target-z-offset-m>
      <default-field-of-view-deg type="double">40.0</default-field-of-view-deg>
    </config>
  </view>

  <view n="100">
    <name>Co-pilot</name>
    <type>lookfrom</type>
    <internal type="bool">true</internal>
    <config>
      <x-offset-m type="double">0.25</x-offset-m>
      <y-offset-m type="double">0.45</y-offset-m>
      <z-offset-m type="double">2.5</z-offset-m>
      <pitch-offset-deg>-12</pitch-offset-deg>
      <field-of-view-deg type="double">60.0</field-of-view-deg>
      <default-field-of-view-deg type="double">60.0</default-field-of-view-deg>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
    </config>
  </view>

</PropertyList>

