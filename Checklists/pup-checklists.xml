<PropertyList include="checklists.xml">

  <auto>
    <timeout-sec>10</timeout-sec>
    <wait-sec>0</wait-sec>
  </auto>

  <status>
    <battery type="bool">false</battery>
    <beacon type="bool">false</beacon>
    <nav-lights type="bool">false</nav-lights>
  </status>

  <apron-start>
    <index>1</index>  <!-- Start Engines -->
    <index>2</index>  <!-- During Warmup -->
    <index>3</index>  <!-- Before Taxi -->
  </apron-start>

  <runway-start>
    <index>1</index>  <!-- Start Engines -->
    <index>2</index>  <!-- During Warmup -->
    <index>3</index>  <!-- Before Taxi -->
    <index>4</index>  <!-- Before Takeoff -->
  </runway-start>

  <after-landing>
    <index>8</index>  <!-- After Landing -->
  </after-landing>

  <before-takeoff>
    <index>4</index>  <!-- Before Takeoff -->
  </before-takeoff>

</PropertyList>
