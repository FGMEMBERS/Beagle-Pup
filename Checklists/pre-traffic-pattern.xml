<PropertyList>

  <title>Pre Traffic Pattern</title>

  <!-- Landing Light - ON -->
  <item>
    <name>Landing Lights</name>
    <value>ON</value>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/landing-lights</property>
        <value>0</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/switches/land-taxi</property>
      <value>2</value>
    </binding>
    <binding>
      <command>nasal</command>
      <script>pup.click();</script>
    </binding>
  </item>

  <!-- Carb Heat - AS REQUIRED -->
  <item>
    <name>Carb Heat</name>
    <value>AS REQUIRED</value>
    <binding>
      <command>property-interpolate</command>
      <property>controls/anti-ice/engine/carb-heat-norm</property>
      <value>0.5</value>
      <rate>1.0</rate>
    </binding>
  </item>

  <!-- Pitot Heater - AS REQUIRED -->
  <item>
    <name>Pitot Heater</name>
    <value>AS REQUIRED</value>
    <binding>
      <command>property-assign</command>
      <property>controls/switches/circuit-breakers/pitot-heater</property>
      <value>1</value>
    </binding>
  </item>

</PropertyList>
