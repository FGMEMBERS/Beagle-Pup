<PropertyList>

  <title>Traffic Pattern Downwind</title>

  <!-- Parking Brake - OFF -->
  <item>
    <name>Parking Brake</name>
    <value>OFF</value>
    <condition>
      <equals>
        <property>controls/gear/brake-parking</property>
        <value>0</value>
      </equals>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/gear/brake-parking</property>
      <value>0</value>
    </binding>
  </item>

  <!-- Mixture - FULL RICH -->
  <item>
    <name>Mixture</name>
    <value>FULL RICH</value>
    <condition>
      <greater-than>
        <property>controls/engines/engine/mixture</property>
        <value>0.95</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-interpolate</command>
      <property>controls/engines/engine/mixture</property>
      <value>1</value>
      <rate>0.5</rate>
    </binding>
  </item>

  <!-- Magnetos - BOTH -->
  <item>
    <name>Magnetos</name>
    <value>BOTH</value>
    <condition>
      <equals>
        <property>controls/engines/engine/magnetos</property>
        <value>3</value>
      </equals>
    </condition>
    <binding>
      <command>magnetos-both</command>
    </binding>
  </item>

  <!-- Boost Pump - ON -->
  <item>
    <name>Boost Pump</name>
    <value>ON</value>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/fuel-pump</property>
        <value>0</value>
      </greater-than>
    </condition>
    <binding>
      <command>switch-assign</command>
      <property>controls/electric/engine/fuel-pump</property>
      <value>1</value>
    </binding>
  </item>

  <!-- Heading Indicator - ALIGN -->
  <item>
    <name>Heading Indicator</name>
    <value>ALIGN</value>
    <condition>
      <less-than>
        <property>instrumentation/heading-indicator/absolute-heading-error-deg</property>
        <value>5</value>
      </less-than>
    </condition>
    <binding>
      <command>align-heading-indicator</command>
    </binding>
  </item>

  <!-- Carb Heat - HOT -->
  <item>
    <name>Carb Heat</name>
    <value>HOT</value>
    <condition>
      <and>
        <property>engines/engine/running</property>
        <greater-than>
          <property>controls/anti-ice/engine/carb-heat-norm</property>
          <value>0.5</value>
        </greater-than>
      </and>
    </condition>
    <binding>
      <command>property-interpolate</command>
      <property>controls/anti-ice/engine/carb-heat-norm</property>
      <value>1.0</value>
      <rate>1.0</rate>
    </binding>
  </item>

  <!-- Altimeter - SET -->
  <item>
    <name>Altimeter</name>
    <value>SET</value>
    <condition>
      <less-than>
        <property>instrumentation/altimeter/absolute-altitude-error-ft</property>
        <value>50</value>
      </less-than>
    </condition>
    <binding>
      <command>set-altimeter-qnh</command>
    </binding>
  </item>

  <!-- Flaps - APPROACH -->
  <item>
    <name>Flaps</name>
    <value>APPROACH</value>
    <condition>
      <and>
        <greater-than>
          <property>fdm/jsbsim/fcs/flap-pos-norm</property>
          <value>0.36</value>
        </greater-than>
        <less-than>
          <property>fdm/jsbsim/fcs/flap-pos-norm</property>
          <value>0.40</value>
        </less-than>
      </and>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/flight/flaps</property>
      <value>0.38</value>
    </binding>
  </item>

</PropertyList>
