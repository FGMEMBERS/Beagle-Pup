<PropertyList>

  <title>Traffic Pattern</title>

  <!-- Flaps - APPROACH -->
  <item>
    <name>Flaps</name>
    <value>APPROACH</value>
    <condition>
      <greater-than>
        <property>controls/flight/flaps</property>
        <value>0</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/flight/flaps</property>
      <value>0.38</value>
    </binding>
  </item>

  <!-- Mixture - FULL RICH -->
  <item>
    <name>Mixture</name>
    <value>FULL RICH</value>
    <condition>
      <greater-than>
        <property>controls/engines/engine/mixture</property>
        <value>0.95</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-interpolate</command>
      <property>controls/engines/engine/mixture</property>
      <value>1</value>
      <rate>0.5</rate>
    </binding>
  </item>

</PropertyList>
