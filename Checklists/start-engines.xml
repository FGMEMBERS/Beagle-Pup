<PropertyList>

  <title>Start Engines</title>

  <!-- Beacon - ON -->
  <item>
    <name>Beacon</name>
    <value>ON</value>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/beacon</property>
        <value>0</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/lighting/beacon</property>
      <value>1</value>
    </binding>
  </item>

  <!-- Fuel Tank Selector - EITHER -->
  <item>
    <name>Fuel Tank Selector</name>
    <value>EITHER</value>
    <condition>
      <or>
        <property>consumables/fuel/tank[1]/selected</property>
        <property>consumables/fuel/tank[2]/selected</property>
      </or>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/fuel/tank-selector</property>
      <value>2</value>
    </binding>
  </item>

  <!-- Mixture - FULL RICH -->
  <item>
    <name>Mixture</name>
    <value>FULL RICH</value>
    <condition>
      <greater-than>
        <property>controls/engines/engine/mixture</property>
        <value>0.95</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-interpolate</command>
      <property>controls/engines/engine/mixture</property>
      <value>1</value>
      <rate>0.5</rate>
    </binding>
  </item>

  <!-- Fuel Pump - ON -->
  <item>
    <name>Fuel Pump</name>
    <value>ON</value>
    <condition>
      <or>
        <property>engines/engine/running</property>
        <greater-than>
          <property>systems/electrical/outputs/fuel-pump</property>
          <value>0</value>
        </greater-than>
      </or>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/electric/engine/fuel-pump</property>
      <value>1</value>
    </binding>
  </item>

  <!-- Open Throttle - 1/4 -->
  <item>
    <name>Throttle</name>
    <value>Approx 1/4</value>
    <condition>
      <or>
        <property>engines/engine/running</property>
        <and>
          <greater-than>
            <property>controls/engines/engine/throttle</property>
            <value>0.1</value>
          </greater-than>
          <less-than>
            <property>controls/engines/engine/throttle</property>
            <value>0.5</value>
          </less-than>
        </and>
      </or>
    </condition>
    <binding>
      <command>property-interpolate</command>
      <property>controls/engines/engine/throttle</property>
      <value>0.25</value>
      <rate>0.5</rate>
    </binding>
  </item>

  <!-- Magnetos - BOTH -->
  <item>
    <name>Magnetos</name>
    <value>BOTH</value>
    <condition>
      <equals>
        <property>controls/engines/engine/magnetos</property>
        <value>3</value>
      </equals>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/engines/engine/magnetos</property>
      <value>3</value>
    </binding>
  </item>

  <!-- Starter Master - ON -->
  <item>
    <name>Starter Master</name>
    <value>ON</value>
    <condition>
      <or>
        <property>systems/electrical/outputs/starter</property>
        <property>engines/engine/running</property>
      </or>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/electric/engine/starter-master</property>
      <value>1</value>
    </binding>
  </item>

  <!-- Engine - START -->
  <item>
    <name>Engine</name>
    <value>START</value>
    <condition>
      <property>engines/engine/running</property>
    </condition>
    <binding>
      <command>nasal</command>
      <script>
        if (!getprop("engines/engine/cranking")) {
          controls.startEngine(1);
          var t = maketimer(3, func {
            controls.startEngine(0);
          });
          t.singleShot = 1;
          t.start();
        }
      </script>
    </binding>
  </item>

  <!-- Fuel Pump - OFF -->
  <item>
    <name>Fuel Pump</name>
    <value>OFF</value>
    <condition>
      <and>
        <property>engines/engine/running</property>
        <equals>
          <property>systems/electrical/outputs/fuel-pump</property>
          <value>0</value>
        </equals>
      </and>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/electric/engine/fuel-pump</property>
      <value>0</value>
    </binding>
  </item>

  <!-- Throttle - IDLE -->
  <item>
    <name>Throttle</name>
    <value>IDLE</value>
    <condition>
      <and>
        <property>engines/engine/running</property>
        <less-than>
          <property>controls/engines/engine/throttle</property>
          <value>0.1</value>
        </less-than>
      </and>
    </condition>
    <binding>
      <command>property-interpolate</command>
      <property>controls/engines/engine/throttle</property>
      <value>0.0</value>
      <rate>0.5</rate>
    </binding>
  </item>

  <!-- Starter Master - OFF -->
  <item>
    <name>Starter Master</name>
    <value>OFF</value>
    <condition>
      <and>
        <property>engines/engine/running</property>
        <equals>
          <property>systems/electrical/outputs/starter</property>
          <value>0</value>
        </equals>
      </and>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/electric/engine/starter-master</property>
      <value>0</value>
    </binding>
  </item>

  <!-- Alternator - ON -->
  <item>
    <name>Alternator</name>
    <value>ON</value>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/bus-dc</property>
        <value>18</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/electric/engine/generator</property>
      <value>1</value>
    </binding>
  </item>

</PropertyList>
