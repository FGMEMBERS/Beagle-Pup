<PropertyList>

  <title>Before Takeoff</title>

  <!-- Landing Light - ON -->
  <item>
    <name>Landing Lights</name>
    <value>ON</value>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/landing-light</property>
        <value>0</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/lighting/landing-light</property>
      <value>1</value>
    </binding>
  </item>

  <!-- Taxi Light - OFF -->
  <item>
    <name>Taxi Light</name>
    <value>OFF</value>
    <condition>
      <equals>
        <property>systems/electrical/outputs/taxi-light</property>
        <value>0</value>
      </equals>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/lighting/taxi-light</property>
      <value>0</value>
    </binding>
  </item>

  <!-- Flaps - TAKEOFF -->
  <item>
    <name>Flaps</name>
    <value>TAKEOFF</value>
    <condition>
      <and>
        <greater-than>
          <property>controls/flight/flaps</property>
          <value>0</value>
        </greater-than>
        <less-than>
          <property>controls/flight/flaps</property>
          <value>1</value>
        </less-than>
      </and>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/flight/flaps</property>
      <value>0.38</value>
    </binding>
  </item>

</PropertyList>
