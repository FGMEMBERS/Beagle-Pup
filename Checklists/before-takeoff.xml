<PropertyList>

  <title>Before Takeoff</title>

  <!-- Landing Light - ON -->
  <item>
    <name>Landing Lights</name>
    <value>ON</value>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/landing-lights</property>
        <value>0</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/lighting/landing-lights</property>
      <value>1</value>
    </binding>
    <binding>
      <command>nasal</command>
      <script>pup.click();</script>
    </binding>
  </item>

  <!-- Taxi Light - OFF -->
  <item>
    <name>Taxi Light</name>
    <value>OFF</value>
    <condition>
      <equals>
        <property>systems/electrical/outputs/taxi-light</property>
        <value>0</value>
      </equals>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/lighting/taxi-light</property>
      <value>0</value>
    </binding>
    <binding>
      <command>nasal</command>
      <script>pup.click();</script>
    </binding>
  </item>

  <!-- Transponder - ALT -->
  <item>
    <name>Transponder</name>
    <value>ALT</value>
    <condition>
      <equals>
        <property>instrumentation/transponder/inputs/knob-mode</property>
        <value>5</value>
      </equals>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>instrumentation/transponder/inputs/knob-mode</property>
      <value>5</value>
    </binding>
  </item>

  <!-- Mixture - FULL RICH -->
  <item>
    <name>Mixture</name>
    <value>FULL RICH</value>
    <condition>
      <greater-than>
        <property>controls/engines/engine/mixture</property>
        <value>0.95</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-interpolate</command>
      <property>controls/engines/engine/mixture</property>
      <value>1</value>
      <rate>0.5</rate>
    </binding>
  </item>

  <!-- Carb Heat - COLD -->
  <item>
    <name>Carb Heat</name>
    <value>COLD</value>
    <condition>
      <less-than>
        <property>controls/anti-ice/engine/carb-heat-norm</property>
        <value>0.05</value>
      </less-than>
    </condition>
    <binding>
      <command>property-interpolate</command>
      <property>controls/anti-ice/engine/carb-heat-norm</property>
      <value>0.0</value>
      <rate>1.0</rate>
    </binding>
  </item>

  <!-- Fuel Tank Selector - BOTH -->
  <item>
    <name>Fuel Tank Selector</name>
    <value>BOTH</value>
    <condition>
      <and>
        <property>consumables/fuel/tank[1]/selected</property>
        <property>consumables/fuel/tank[2]/selected</property>
      </and>
    </condition>
    <binding>
      <command>nasal</command>
      <script>
        pup.select_fuel_tank(pup.Tank.BOTH);
      </script>
    </binding>
  </item>

  <!-- Boost Pump - ON -->
  <item>
    <name>Boost Pump</name>
    <value>ON</value>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/fuel-pump</property>
        <value>0</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/electric/engine/fuel-pump</property>
      <value>1</value>
    </binding>
    <binding>
      <command>nasal</command>
      <script>pup.click();</script>
    </binding>
  </item>

  <!-- Flaps - TAKEOFF -->
  <item>
    <name>Flaps</name>
    <value>TAKEOFF</value>
    <condition>
      <and>
        <greater-than>
          <property>fdm/jsbsim/fcs/flap-pos-norm</property>
          <value>0.36</value>
        </greater-than>
        <less-than>
          <property>fdm/jsbsim/fcs/flap-pos-norm</property>
          <value>0.40</value>
        </less-than>
      </and>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/flight/flaps</property>
      <value>0.38</value>
    </binding>
  </item>

</PropertyList>
