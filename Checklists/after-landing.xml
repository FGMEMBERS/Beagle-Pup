<PropertyList>

  <title>After Landing</title>

  <!-- Taxi Light - ON -->
  <item>
    <name>Taxi Light</name>
    <value>ON</value>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/taxi-light</property>
        <value>0</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/switches/land-taxi</property>
      <value>0</value>
    </binding>
    <binding>
      <command>nasal</command>
      <script>pup.click();</script>
    </binding>
  </item>

  <!-- Flaps - UP -->
  <item>
    <name>Flaps</name>
    <value>UP</value>
    <condition>
      <equals>
        <property>fdm/jsbsim/fcs/flap-pos-norm</property>
        <value>0</value>
      </equals>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/flight/flaps</property>
      <value>0</value>
    </binding>
  </item>

  <!-- Boost Pump - OFF -->
  <item>
    <name>Boost Pump</name>
    <value>OFF</value>
    <condition>
      <equals>
        <property>systems/electrical/outputs/fuel-pump</property>
        <value>0</value>
      </equals>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/electric/engine/fuel-pump</property>
      <value>0</value>
    </binding>
    <binding>
      <command>nasal</command>
      <script>pup.click();</script>
    </binding>
  </item>

  <!-- Carb Heat - COLD -->
  <item>
    <name>Carb Heat</name>
    <value>COLD</value>
    <condition>
      <less-than>
        <property>controls/anti-ice/engine/carb-heat-norm</property>
        <value>0.05</value>
      </less-than>
    </condition>
    <binding>
      <command>property-interpolate</command>
      <property>controls/anti-ice/engine/carb-heat-norm</property>
      <value>0.0</value>
      <rate>1.0</rate>
    </binding>
  </item>

  <!-- Pitot Heater - OFF -->
  <item>
    <name>Pitot Heater</name>
    <value>OFF</value>
    <condition>
      <equals>
        <property>systems/electrical/outputs/pitot-heater</property>
        <value>0.0</value>
      </equals>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/switches/circuit-breakers/pitot-heater</property>
      <value>0</value>
    </binding>
    <binding>
      <command>nasal</command>
      <script>pup.click();</script>
    </binding>
  </item>

  <!-- Transponder - SBY -->
  <item>
    <name>Transponder</name>
    <value>SBY</value>
    <condition>
      <equals>
        <property>instrumentation/transponder/inputs/knob-mode</property>
        <value>1</value>
      </equals>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>instrumentation/transponder/inputs/knob-mode</property>
      <value>1</value>
    </binding>
  </item>

</PropertyList>
