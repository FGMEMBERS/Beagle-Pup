<PropertyList>

  <checklist include="before-starting-engines.xml"></checklist>
  <checklist include="start-engines.xml"></checklist>
  <checklist include="before-taxi.xml"></checklist>
  <checklist include="before-takeoff.xml"></checklist>
  <checklist include="initial-climb.xml"></checklist>
  <checklist include="pre-traffic-pattern.xml"></checklist>
  <checklist include="traffic-pattern.xml"></checklist>
  <checklist include="after-landing.xml"></checklist>
  <checklist include="parking.xml"></checklist>

  <auto>
    <timeout-sec>10</timeout-sec>
    <wait-sec>1</wait-sec>
  </auto>

  <status>
    <beacon type="bool">false</beacon>
    <nav-lights type="bool">false</nav-lights>
  </status>

  <apron-start>
    <index n="0">1</index>  <!-- Start Engines -->
    <index n="1">2</index>  <!-- Before Taxi -->
  </apron-start>

  <runway-start>
    <index n="0">1</index>  <!-- Start Engines -->
    <index n="1">2</index>  <!-- Before Taxi -->
    <index n="2">3</index>  <!-- Before Takeoff -->
  </runway-start>

  <after-landing>
    <index n="0">7</index>  <!-- After Landing -->
  </after-landing>

  <before-takeoff>
    <index n="0">3</index>  <!-- Before Takeoff -->
  </before-takeoff>

</PropertyList>
