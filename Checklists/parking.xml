<PropertyList>

  <title>Parking</title>

  <!-- Parking Brake - ON -->
  <item>
    <name>Parking Brake</name>
    <value>ON</value>
    <condition>
      <equals>
        <property>controls/gear/brake-parking</property>
        <value>1</value>
      </equals>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/gear/brake-parking</property>
      <value>1</value>
    </binding>
  </item>

  <!-- Taxi Light - OFF -->
  <item>
    <name>Taxi Light</name>
    <value>OFF</value>
    <condition>
      <equals>
        <property>systems/electrical/outputs/taxi-light</property>
        <value>0</value>
      </equals>
    </condition>
    <binding>
      <command>land-taxi-off</command>
    </binding>
  </item>

  <!-- Transponder - OFF -->
  <item>
    <name>Transponder</name>
    <value>OFF</value>
    <condition>
      <equals>
        <property>instrumentation/transponder/inputs/knob-mode</property>
        <value>0</value>
      </equals>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>instrumentation/transponder/inputs/knob-mode</property>
      <value>0</value>
    </binding>
  </item>

  <!-- Radios - OFF -->
  <item>
    <name>Radios</name>
    <value>OFF</value>
    <condition>
      <and>
        <not>
          <property>instrumentation/adf/power-btn</property>
        </not>
        <not>
          <property>instrumentation/comm/power-btn</property>
        </not>
        <not>
          <property>instrumentation/dme/power-btn</property>
        </not>
      </and>
    </condition>
    <binding>
      <command>property-interpolate</command>
      <property>instrumentation/adf/volume-norm</property>
      <value>0.0</value>
      <time>0.5</time>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>instrumentation/adf/power-btn</property>
      <value>0</value>
    </binding>
    <binding>
      <command>property-interpolate</command>
      <property>instrumentation/comm/volume</property>
      <value>0.0</value>
      <time>0.5</time>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>instrumentation/comm/power-btn</property>
      <value>0</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>instrumentation/dme/power-btn</property>
      <value>0</value>
    </binding>
  </item>

  <!-- Throttle - TICK OVER -->
  <item>
    <name>Tick Over</name>
    <value>Approx 1000 RPM</value>
    <condition>
      <or>
        <not>
          <property>engines/engine/running</property>
        </not>
        <and>
          <greater-than>
            <property>engines/engine/rpm</property>
            <value>800</value>
          </greater-than>
          <less-than>
            <property>engines/engine/rpm</property>
            <value>1200</value>
          </less-than>
        </and>
      </or>
    </condition>
    <binding>
      <command>property-interpolate</command>
      <property>controls/engines/engine/throttle</property>
      <value>0.30</value>
      <rate>0.5</rate>
    </binding>
  </item>

  <!-- Mixture - IDLE CUTOFF -->
  <item>
    <name>Mixture</name>
    <value>IDLE CUTOFF</value>
    <condition>
      <equals>
        <property>controls/engines/engine/mixture</property>
        <value>0</value>
      </equals>
    </condition>
    <binding>
      <command>property-interpolate</command>
      <property>controls/engines/engine/mixture</property>
      <value>0</value>
      <rate>0.5</rate>
    </binding>
  </item>

  <!-- Beacon - OFF -->
  <item>
    <name>Beacon</name>
    <value>OFF</value>
    <condition>
      <equals>
        <property>systems/electrical/outputs/beacon</property>
        <value>0</value>
      </equals>
    </condition>
    <binding>
      <command>switch-assign</command>
      <property>controls/switches/circuit-breakers/beacon</property>
      <value>0</value>
    </binding>
  </item>

  <!-- Alternator - OFF -->
  <item>
    <name>Alternator</name>
    <value>OFF</value>
    <condition>
      <equals>
        <property>controls/electric/engine/generator</property>
        <value>0</value>
      </equals>
    </condition>
    <binding>
      <command>switch-assign</command>
      <property>controls/electric/engine/generator</property>
      <value>0</value>
    </binding>
  </item>

  <!-- Main Battery - OFF -->
  <item>
    <name>Main Battery</name>
    <value>OFF</value>
    <condition>
      <equals>
        <property>systems/electrical/outputs/bus-dc</property>
        <value>0</value>
      </equals>
    </condition>
    <binding>
      <command>switch-assign</command>
      <property>controls/electric/battery-switch</property>
      <value>0</value>
    </binding>
  </item>

  <!-- Magnetos - OFF -->
  <item>
    <name>Magnetos</name>
    <value>OFF</value>
    <condition>
      <equals>
        <property>controls/engines/engine/magnetos</property>
        <value>0</value>
      </equals>
    </condition>
    <binding>
      <command>magnetos-off</command>
    </binding>
  </item>

  <!-- Fuel Tank Selector - OFF -->
  <item>
    <name>Fuel Tank Selector</name>
    <value>OFF</value>
    <condition>
      <not>
        <or>
          <property>consumables/fuel/tank[1]/selected</property>
          <property>consumables/fuel/tank[2]/selected</property>
        </or>
    </not>
    </condition>
    <binding>
      <command>tank-select-off</command>
    </binding>
  </item>

</PropertyList>
