<PropertyList>

  <name>lights</name>
  <modal>false</modal>
  <layout>vbox</layout>

  <!-- TITLE BAR -->

  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>
    <text>
      <label>Lights</label>
    </text>
    <empty>
      <stretch>1</stretch>
    </empty>
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <hrule><dummy/></hrule>

  <group>
    <layout>vbox</layout>
    <default-padding>10</default-padding>
    <group>
      <layout>vbox</layout>
      <default-padding>1</default-padding>
      <text>
        <halign>left</halign>
        <label>EXTERIOR</label>
      </text>
      <group>
        <layout>hbox</layout>
        <default-padding>5</default-padding>
        <text>
          <halign>left</halign>
          <label>Navigation Lights</label>
        </text>
        <checkbox>
          <halign>right</halign>
          <property>controls/lighting/nav-lights</property>
          <live>true</live>
          <binding>
            <command>property-toggle</command>
            <property>controls/lighting/nav-lights</property>
          </binding>
        </checkbox>
      </group>
      <group>
        <layout>hbox</layout>
        <default-padding>5</default-padding>
        <text>
          <halign>left</halign>
          <label>Beacon</label>
        </text>
        <checkbox>
          <halign>right</halign>
          <property>controls/lighting/beacon</property>
          <live>true</live>
          <binding>
            <command>property-toggle</command>
            <property>controls/lighting/beacon</property>
          </binding>
        </checkbox>
      </group>
      <group>
        <layout>hbox</layout>
        <default-padding>5</default-padding>
        <text>
          <halign>left</halign>
          <label>Taxi Light</label>
        </text>
        <checkbox>
          <halign>right</halign>
          <property>controls/lighting/taxi-light</property>
          <live>true</live>
          <binding>
            <command>property-toggle</command>
            <property>controls/lighting/taxi-light</property>
          </binding>
        </checkbox>
      </group>
      <group>
        <layout>hbox</layout>
        <default-padding>5</default-padding>
        <text>
          <halign>left</halign>
          <label>Landing Light</label>
        </text>
        <checkbox>
          <halign>right</halign>
          <property>controls/lighting/landing-lights</property>
          <live>true</live>
          <binding>
            <command>property-toggle</command>
            <property>controls/lighting/landing-lights</property>
          </binding>
        </checkbox>
      </group>
    </group>
  </group>

  <hrule><dummy/></hrule>

  <group>
    <layout>hbox</layout>
    <default-padding>10</default-padding>
    <group>
      <layout>vbox</layout>
      <default-padding>1</default-padding>
      <text>
        <halign>left</halign>
        <label>INTERIOR</label>
      </text>
      <group>
        <layout>hbox</layout>
        <default-padding>5</default-padding>
        <text>
          <halign>left</halign>
          <label>Cockpit Lights</label>
        </text>
        <slider>
          <halign>right</halign>
          <property>controls/lighting/panel-norm</property>
          <binding>
            <command>dialog-apply</command>
          </binding>
          <min>0.0</min>
          <max>1.0</max>
        </slider>
      </group>
    </group>
  </group>

</PropertyList>
