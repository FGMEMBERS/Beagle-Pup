<?xml version="1.0"?>

<PropertyList include="pup-common-sound.xml">

  <fx>
    <engine>
      <name>running</name>
      <mode>looped</mode>
      <path>Continental_0-200-A.wav</path>
      <condition>
        <and>
          <property>engines/engine/running</property>
          <not>
            <property>sim/current-view/internal</property>
          </not>
        </and>
      </condition>
      <reference-dist>100.0</reference-dist>
      <max-dist>500.0</max-dist>
      <position>
        <x>0.5</x>
        <y>0</y>
        <z>0</z>
      </position>
      <volume>
        <property>engines/engine/mp-inhg</property>
        <factor>0.033</factor>
        <min>0.4</min>
        <max>1.0</max>
      </volume>
      <volume>
        <property>sim/sound/cabin-volume</property>
      </volume>
      <pitch>
        <property>engines/engine/rpm</property>
        <factor>0.0005</factor>
        <offset>0.3</offset>
        <max>2.5</max>
      </pitch>
    </engine>
    <engine>
      <name>running inside</name>
      <mode>looped</mode>
      <path>Continental_0-200-A-internal.wav</path>
      <condition>
        <and>
          <property>engines/engine/running</property>
          <property>sim/current-view/internal</property>
        </and>
      </condition>
      <reference-dist>100.0</reference-dist>
      <max-dist>500.0</max-dist>
      <position>
        <x>0.5</x>
        <y>0</y>
        <z>0</z>
      </position>
      <volume>
        <property>engines/engine/mp-inhg</property>
        <factor>0.025</factor>
        <min>0.4</min>
        <max>0.7</max>
      </volume>
      <volume>
        <property>sim/sound/cabin-volume</property>
      </volume>
      <pitch>
        <property>engines/engine/rpm</property>
        <factor>0.0005</factor>
        <offset>0.3</offset>
        <max>2.5</max>
      </pitch>
    </engine>
  </fx>

</PropertyList>
