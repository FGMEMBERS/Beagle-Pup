<PropertyList>

  <path>OilTemp.ac</path>

  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>Needle</object-name>
    <condition>
      <property>systems/electrical/outputs/oil-temp-gauge</property>
    </condition>
    <emission>
      <red>0.7</red>
      <green>0.7</green>
      <blue>0.7</blue>
      <factor-prop>controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Needle</object-name>
    <property>instrumentation/oil/oil-temp-degc</property>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>120</ind>
        <dep>90</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>-0.0190</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>

  </animation>

</PropertyList>

