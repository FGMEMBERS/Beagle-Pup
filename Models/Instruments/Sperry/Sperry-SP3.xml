<PropertyList>

  <path>Sperry-SP3.ac</path>

  <animation>
    <type>material</type>
    <object-name>Body</object-name>
    <object-name>ElevTrimKnob</object-name>
    <object-name>OnOffSwitch</object-name>
    <object-name>PitchSelectWheel</object-name>
    <object-name>RollTrimWheel</object-name>
    <object-name>TurnKnob</object-name>
    <emission>
      <red>0.40</red>
      <green>0.35</green>
      <blue>0.35</blue>
      <factor-prop>controls/lighting/flood-norm</factor-prop>
    </emission>
  </animation>

  <effect>
    <inherits-from>Aircraft/Beagle-Pup/Models/Effects/Lights/headtorch</inherits-from>
    <object-name>Body</object-name>
    <object-name>ElevTrimKnob</object-name>
    <object-name>OnOffSwitch</object-name>
    <object-name>PitchSelectWheel</object-name>
    <object-name>RollTrimWheel</object-name>
    <object-name>TurnKnob</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>AltHoldButton</object-name>
    <condition>
      <not>
        <and>
          <property>autopilot/locks/active</property>
          <property>autopilot/locks/altitude-hold</property>
        </and>
      </not>
      <greater-than>
        <property>systems/electrical/outputs/panel-lights</property>
        <value>0.0</value>
      </greater-than>
    </condition>
    <emission>
      <red>0.30</red>
      <green>0.28</green>
      <blue>0.28</blue>
      <factor-prop>controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>AltHoldButton</object-name>
    <condition>
      <and>
        <property>autopilot/locks/active</property>
        <property>autopilot/locks/altitude-hold</property>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.0</green>
      <blue>0.0</blue>
    </emission>
  </animation>

  <animation>
    <type>slider</type>
    <object-name>AltHoldButton</object-name>
    <property>autopilot/sperry/alt-hold-button</property>
    <factor>-0.002</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-assign</command>
        <property>autopilot/sperry/alt-hold-button</property>
        <value>1</value>
      </binding>
    </action>
    <release>
      <binding>
        <command>nasal</command>
        <script>
          # Use a timer to make simple clicks visible as a momentary
          # selection toggle switch
          var t = maketimer(0.1, func {
            setprop("autopilot/sperry/alt-hold-button", 0);
          });
          t.singleShot = 1;
          t.start();
          pup.click();
        </script>
      </binding>
    </release>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>ElevTrimKnob</object-name>
    <property>autopilot/sperry/elev-trim</property>
    <factor>5.0</factor>
    <center>
      <x-m>0.0026</x-m>
      <y-m>-0.0236</y-m>
      <z-m>0.0374</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/sperry/elev-trim</property>
        <factor>0.01</factor>
        <min>-5.0</min>
        <max>5.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>OnOffSwitch</object-name>
    <property>autopilot/sperry/main-switch</property>
    <factor>-25</factor>
    <offset-deg>0</offset-deg>
    <center>
      <x-m>0.0059</x-m>
      <y-m>0.0409</y-m>
      <z-m>-0.0141</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-toggle</command>
        <property>autopilot/sperry/main-switch</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>pup.click()</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>PitchSelectWheel</object-name>
    <property>autopilot/sperry/pitch-select</property>
    <factor>5.0</factor>
    <center>
      <x-m>-0.0139</x-m>
      <y-m>-0.0515</y-m>
      <z-m>0.0022</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/sperry/pitch-select</property>
        <factor>0.1</factor>
        <min>-10.0</min>
        <max>10.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>RollTrimWheel</object-name>
    <property>autopilot/sperry/roll-trim</property>
    <factor>10</factor>
    <center>
      <x-m>-0.0058</x-m>
      <y-m>0.0357</y-m>
      <z-m>0.0257</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/sperry/roll-trim</property>
        <factor>0.1</factor>
        <min>-5.0</min>
        <max>5.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>TurnKnob</object-name>
    <property>autopilot/sperry/turn-select</property>
    <factor>-6</factor>
    <center>
      <x-m>0.0085</x-m>
      <y-m>0.0000</y-m>
      <z-m>0.0005</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/sperry/turn-select</property>
        <factor>1</factor>
        <min>-20.0</min>
        <max>20.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

</PropertyList>
