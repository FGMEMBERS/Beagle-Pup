<PropertyList>

  <path>CarbHeatLever.ac</path>

  <animation>
    <type>material</type>
    <object-name>Sheath</object-name>
    <object-name>Lever</object-name>
    <condition>
      <property>systems/electrical/outputs/panel-lights</property>
    </condition>
    <emission>
      <red>0.3</red>
      <green>0.3</green>
      <blue>0.3</blue>
      <factor-prop>controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>slider</type>
    <object-name>Lever</object-name>
    <property>controls/anti-ice/engine/carb-heat-norm</property>
    <factor>0.025</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/anti-ice/engine/carb-heat-norm</property>
        <factor>0.1</factor>
        <min>0.0</min>
        <max>1.0</max>
        <wrap>0</wrap>
      </binding>
    </action>
  </animation>

</PropertyList>

