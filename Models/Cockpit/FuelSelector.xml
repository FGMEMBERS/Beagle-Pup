<PropertyList>

  <path>FuelSelector.ac</path>

  <animation>
    <type>material</type>
    <object-name>Body</object-name>
    <object-name>Handle</object-name>
    <condition>
      <property>systems/electrical/outputs/panel-lights</property>
    </condition>
    <emission>
      <red>0.3</red>
      <green>0.3</green>
      <blue>0.3</blue>
      <factor-prop>controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>Handle</object-name>
    <property>controls/fuel/tank-selector</property>
    <factor>45</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/fuel/tank-selector</property>
        <factor>1</factor>
        <min>0</min>
        <max>4</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>pup.click();</script>
      </binding>
    </action>
  </animation>

</PropertyList>

